{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "moduleResolution": "Node",
      "allowJs": true,
      "noEmit": true,
      "types": ["playwright/test"]
    },
    "include": ["tests/**/*.ts", "playwright.config.ts"],
    "exclude": ["node_modules"]
  }
  